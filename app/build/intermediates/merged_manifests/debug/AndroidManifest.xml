<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.servo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="31" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.Servo" >
        <activity
            android:name="com.example.servo.CompletedActivity"
            android:exported="false" />
        <activity
            android:name="com.example.servo.PendingActivity"
            android:exported="false" />
        <activity
            android:name="com.example.servo.ComplaintActivity"
            android:exported="false" />
        <activity
            android:name="com.example.servo.NewComplaint"
            android:exported="false"
            android:label="@string/title_activity_new_complaint"
            android:theme="@style/Theme.Servo.NoActionBar" />
        <activity
            android:name="com.example.servo.WorkerActivity"
            android:exported="false" />
        <activity
            android:name="com.example.servo.StudentActivity"
            android:exported="false" />
        <activity
            android:name="com.example.servo.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.servo.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.example.servo.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.servo.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>